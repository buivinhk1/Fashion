@using Fashion.Models
@model List<GioHang>

@{
    ViewBag.Title = "Đơn Đặt Hàng";
    Layout = "~/Views/Layout/Fashion.cshtml";
}


@section GioHang{
    <link href="~/Content/GioHang.css" rel="stylesheet">
   
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        h1 {
            width: 85%;
            background-color: #000000;
            color: #ffffff;
            margin-top: 100px;
            text-align: center;
            margin-bottom: -2px;
            margin-left: 12%;
            border-radius:10px;
        }

        .content-giohang {
            width: 100%;
            margin-top: 100px;
            font-size: 20px;
        }

        table {
            width: 85%;
            box-shadow: 0px 15px 25px 5px rgb(0 0 0 / 25%);
            border: 0.5px;
            border-radius: 15px;
        }

        td {
            padding: 10px;
            border: solid;
        }

        tr {
            background: #f6ffd1;
        }

            tr btn {
                margin: 10px 10px;
            }

        media (max-width: 1024px) {
            content-giohang{
                margin-top: 70px;
                font-size: 12px;
            }
        }

        media (max-width: 430px) {
            content-giohang
            {
                width: 50%;
                font-size: 8px;
            }

        }
    </style>

    <div class="content-giohang">
        <h1 style="text-align:center" class="tt">Thông Tin Hàng Hóa</h1>
        <table align="center" border="1">
            <tr style="text-align:center; font-weight:bold">
                <td>Mã Sản Phẩm</td>
                <td>Tên Sản Phẩm</td>
                <td>Ảnh Bìa</td>
                <td>Số Lượng</td>
                <td>Đơn Giá</td>
                <td>Thành Tiền</td>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="text-align:center; font-weight:bold">
                    <td>@item.masp</td>
                    <td>@item.tensp</td>
                    <td><img src="~/Sản Phẩm/@item.anhbia" alt="Alternate Text" /></td>
                    @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { id = item.masp }))
                    {
                        <td>@item.soluong</td>
                        <td>@String.Format("{0:0,0 }", @item.dongia)</td>
                        <td>@String.Format("{0:0,0 }", @item.thanhtien)</td>
                    }
                </tr>
            }
            <tr style="text-align:center; font-weight:bold">
                <td colspan="4">Số Lượng : @ViewBag.TongSoLuong</td>
                <td colspan="5">Tổng Tiền : @String.Format("{0:0,0 }", ViewBag.TongTien) VNĐ</td>
            </tr>
            <tr style="text-align:right; font-weight:bold">
                <td colspan="9"><a class="btn btn-warning" href="@Url.Action("GioHang","GioHang")">Về Giỏ Hàng</a></td>
            </tr>
        </table>
    </div>
	<div class="content-giohang" style="margin-top: 100px;">
		<h1 style="text-align:center">Thông Tin Đặt Hàng</h1>
		@{
			KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
		}
		<table align="center">
			@using (Html.BeginForm())
			{
				@Html.ValidationSummary(true)
				<tr style="height:40px">
					<td>Khách Hàng</td>
					<td style="font-weight:bold">@kh.HoTen</td>
				</tr>
				<tr style="height:40px">
					<td>Địa Chỉ</td>
					<td style="font-weight:bold">@kh.DiachiKH</td>
				</tr>
				<tr style="height:40px">
					<td>Số Điện Thoại</td>
					<td style="font-weight:bold">@kh.DienthoaiKH</td>
				</tr>
				<tr style="height:40px">
					<td>Ngày Đặt</td>
					<td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
				</tr>
				/*<tr style="height:40px">
					<td>Ngày Giao Hàng</td>
					<td>    
						<input required type="date" name="NgayGiao" />
					</td>
				</tr>*/
				<tr style="height:40px;">
					
					<td colspan="9" style="text-align: right; font-weight: bold">
						<input type="submit" value="Đồng Ý Đặt Hàng" style=" border-radius: 10px; border: 2px solid #808080; background-color: #848672 " /> </td>
                </tr>				
			}
		</table>
		
	</div>
}
