@model Fashion.Models.HoTro

@{
    ViewBag.Title = "GOPY_CHITIET";
    Layout = "~/Views/Layout/Admin/_LayoutAdmin.cshtml";
}

<div>
    <h2 style="text-align: center; font-size:32px;">GÓP Ý CHI TIẾT </h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Họ Tên: ")
            @Html.DisplayFor(model => model.HoTen)
        </dt>

        <dt>
            @Html.DisplayName("Email: ")
            @Html.DisplayFor(model => model.Email)
        </dt>

        <dt>
            @Html.DisplayName("Góp Ý : ")
            @Html.DisplayFor(model => model.LyDo)
        </dt>

    </dl>
</div>
<a class="btn")
    @Html.ActionLink("Quay Lại", "DSGOPY")
</a>
    
<style>
    .dl-horizontal {
        width: 60%;
        margin-top: 20px;
        margin-left: 20%;
        padding-left: 10%;
        font-size: 20px;
        border: solid 2px;
        box-shadow: 0px 15px 15px 10px #808080;
    }

    dt, dd {
        color: white;
        margin: 20px 10px;
    }

    .form-actions {
        margin-top: 80px;
        margin-left: 18%;
        width: 100%;
    }

    .btn {
        margin-top: 20px;
        margin-left:40%;
        color: white;
        background: #ea2858;
        border: none;
        padding:1.7em 85px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .btn:hover {
            color: #ea2858;
            background: white;
        }

    .return {
        margin-left: 8%;
        color: white;
        background: #ea2858;
        border: none;
        padding: .7em 83px;
        outline: none;
        width: 20%;
        font-size: 1em;
        cursor: pointer;
        letter-spacing: 1px;
        font-weight: 400;
        font-family: 'Open Sans', sans-serif;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -o-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -ms-transition: 0.5s all;
        border-radius: 30px;
        float: left;
    }

        .return:hover {
            color: #ea2858;
            background: white;
        }

    @@media(max-width: 1040px) {
        .return {
            margin-left: 8%;
            padding: 0.7em 43px;
            margin-top: 0px;
            width: 20%;
        }
    }

    @@media(max-width: 780px) {
        label {
            margin-left: 22%;
        }

        .btn {
            margin-left: 2%;
            width: 25%;
        }

        .return {
            margin-left: 4%;
            padding: 0.7em 47px;
            margin-top: 0px;
            width: 28%;
        }
    }

    @@media(max-width: 430px) {
        label {
            margin-left: 20%;
        }

        .return {
            margin-left: 5%;
