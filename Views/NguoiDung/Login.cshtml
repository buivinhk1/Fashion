
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/Login/_LayoutDangNhạp.cshtml";
}

<form action="#" method="post">
    <h4 style="color:red; background-color:snow;text-align:center;border-radius:20%;">@ViewBag.ThongBao</h4>
    <div class="pom-agile">
        <input placeholder="Tài Khoản" name="TaiKhoan" class="pass" type="text" required="">
        <span class="icon2"><i aria-hidden="true"></i></span>
    </div>
    <div class="pom-agile">
        <input placeholder="Password" name="Password" class="pass" type="password" required="">
        <span class="icon2"><i aria-hidden="true"></i></span>
    </div>
    <div class="sub-w3l">
        <h6><a href="@Url.Action("SignUp","NguoiDung")" style="margin-right:25px">Đăng Ký</a></h6>
        <div class="right-w3l">
            <input class="submit" type="Submit" value="Login">
        </div>
    </div>
</form>