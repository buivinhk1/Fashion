@model IEnumerable<Fashion.Models.CHITIETDONTHANG>
@{
    ViewBag.Title = "HistoryDetails";
    Layout = "~/Views/Layout/Fashion.cshtml";
}

<div class="container-xl history-container py-5 px-5" style="margin-top:10%; height: 500px">
    <div class="table-content table-responsive">
        <h2 class="mb-5">Lịch sử mua hàng</h2>
        <table class="table text-center">
            <thead class="border-bottom text-left">
                <tr>
                    <th>
                        @Html.DisplayName("Tên Người Mua")
                    </th>
                    <th>
                        @Html.DisplayName("Sản Phẩm")
                    </th>
                    <th>
                        @Html.DisplayName("Ảnh")
                    </th>
                    <th>
                        @Html.DisplayName("Số Lượng")
                    </th>
                    <th>
                        @Html.DisplayName("Đơn Giá")
                    </th>
                </tr>
            </thead>
            <tbody class="text-left">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DONDATHANG.KHACHHANG.HoTen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                        </td>
                        <td>
                            <img src="~/Sản Phẩm/@Html.DisplayFor(modelItem => item.SANPHAM.Anhbia)" alt="Alternate Text" style="width:75px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Soluong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dongia)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="space" style="display:flex;justify-content:space-around">
            <a class="btn btn-danger"  href="@Url.Action("Index","Fashion")" style=" text-decoration: none;">TRỞ VỀ</a>
        </div>
    </div>
</div>
